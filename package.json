{
  "name": "redux-with-lit",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{js,ts,css,html}\"",
    "clean": "rimraf dist",
    "build": "npm run clean && rollup -c && npm run docs",
    "build:watch": "npm run clean && rollup -c --watch",
    "sass:build": "sass --update --no-source-map --load-path=node_modules/ src/styles/styles-for-demo-app.scss src/styles/styles-for-demo-app.css",
    "start": "npm run sass:build && web-dev-server",
    "serve": "concurrently \"npm run build:watch\" \"npm run start\"",
    "test": "npm run sass:build && web-test-runner",
    "docs": "wca analyze src --format markdown --outFile dist/docs/components.md && copy README.template.md README.md && type dist\\docs\\components.md >> README.md"
  },
  "keywords": [],
  "author": "Nishant Basu",
  "license": "ISC",
  "description": "Lit Element Typescrip Starter Project with sass and openwc using rollup",
  "dependencies": {
    "@reduxjs/toolkit": "^2.5.0",
    "lit": "^3.1.0",
    "redux": "^5.0.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "5.0.0",
    "@open-wc/testing": "^3.1.6",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "0.4.4",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-esbuild": "^1.0.3",
    "@web/dev-server-rollup": "^0.6.4",
    "@web/test-runner": "^0.14.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-lit": "^1.15.0",
    "prettier": "^3.3.3",
    "rimraf": "5.0.5",
    "rollup": "^2.11.2",
    "rollup-plugin-filesize": "10.0.0",
    "rollup-plugin-import-lithtml": "1.0.3",
    "rollup-plugin-lit-css": "^5.0.1",
    "rollup-plugin-minify-html-literals": "1.2.6",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-typescript2": "0.36.0",
    "sass": "1.71.0",
    "tslib": "2.6.2",
    "typescript": "5.2.2",
    "web-component-analyzer": "^2.0.0"
  }
}
